{
    "name": "Custom Tab Sorter",
    "description": "Sort your tabs based on a value in the page",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/cts16.png",
        "32": "/images/cts32.png",
        "48": "/images/cts48.png",
        "128": "/images/cts128.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/cts16.png",
            "32": "/images/cts32.png",
            "48": "/images/cts48.png",
            "128": "/images/cts128.png"
        }
    }
  }